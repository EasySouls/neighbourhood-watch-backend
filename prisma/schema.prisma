generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  DEP_HEAD
  CIVIL_GUARD
}

model Account {
  id          String       @id @default(cuid())
  name        String
  email       String       @unique
  password    String
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  civilGuards CivilGuard[]
}

model CivilGuard {
  id           String                @id @default(cuid())
  name         String
  roles        Role[]
  account      Account?              @relation(fields: [accountId], references: [id])
  accountId    String?
  createdAt    DateTime              @default(now())
  updatedAt    DateTime              @updatedAt
  duties       CivilGuardsOnDuties[]
  department   Department?           @relation(fields: [departmentId], references: [id])
  departmentId String?
  authCode     Int                   @unique
}

enum DutyType {
  PATROL
  EVENT
}

model Duty {
  id           String                @id @default(cuid())
  name         String
  description  String
  startDate    DateTime              @default(now())
  endDate      DateTime?
  type         DutyType
  civilGuards  CivilGuardsOnDuties[]
  createdAt    DateTime              @default(now())
  updatedAt    DateTime              @updatedAt
  Department   Department?           @relation(fields: [departmentId], references: [id])
  departmentId String?
}

model CivilGuardsOnDuties {
  civilGuardId String
  dutyId       String
  civilGuard   CivilGuard @relation(fields: [civilGuardId], references: [id])
  duty         Duty       @relation(fields: [dutyId], references: [id])

  @@id([civilGuardId, dutyId])
}

model Department {
  id          String       @id @default(cuid())
  name        String
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  duties      Duty[]
  civilGuards CivilGuard[]
}
